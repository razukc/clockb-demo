<div id="advert-form" class="" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <h4 id="modalTitle">Post an Advert</h4>
	<div class="panel clearfix">
	<%= form_for [@user, @new_advert], remote: true, :html => {multipart: true} do |f| %>
			<%= f.file_field :image, :placeholder => '+ Add Advert Image', class: '' %>
			<%= f.text_area :content, :placeholder => '+ Add Advert Description', style: 'resize:none;', rows: 3 %>
		<%= f.submit "Post", class: 'button tiny right info', data: {:disable_with => 'Please wait...'} %>
		<%= render partial: 'shared/preloader' %>
	<% end %>
	</div>
	  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>
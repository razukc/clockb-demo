<div class="row" style="margin-top:50px;">
<div class="large-4 columns small-centered panel">
<ul class="side-nav">
  <li class="heading"><%= t 'devise.invitations.edit.header' %></li>
  <li class="divider"></li>
</ul>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>

  <p><%= f.label :email %><br />
  <%= f.text_field :email, :disabled => 'disabled'%></p>

  <p><%= f.label :password %><br />
    
    <em><%= "(6 characters minimum)"</em><br />
    
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>
  <div class="clearfix">
  <p><%= f.submit t("devise.invitations.edit.submit_button"), class: 'button small right' %></p>
  </div>
<% end %>
</div>
</div>
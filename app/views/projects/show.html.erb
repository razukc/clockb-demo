<%= content_for :page_title, "Project Details" %>
<div class="row">
	<div class="columns large-12">
		<table width="100%">
			<thead>
				<tr><th colspan="2" style="text-align:center;"><h4>Project Details</h4></th></tr>
			</thead>
			<tr>
				<td class="subheader">Project created by:</td>
				<td>
					<span class="left"><%= @project.user %></span>
					<span class="right"><%= link_to "View Profile", profile_path(@project.user) %></span>
				</td>
			</tr>
			<tr>
				<td class="subheader">Name of Project:</td>
				<td><%= @project.title %></td>
			</tr>
			<tr>
				<td class="subheader">Project Description:</td>
				<td><%= @project.description %></td>
			</tr>
			<tr>
				<td class="subheader">Project Documents:</td>
				<td><%= @project.document %></td>
			</tr>
		</table>
	</div>
</div>
<div class="row">
	<div class="columns large-4">
		<h5>Assign Freelancers</h5>
		  	<table width="100%">
					<tr>
						<td colspan="2" style="text-align:center;">
							<%= image_tag "500.png", class: 'lazyload th-no-hover', style: "width:150px;" %>
						</td>
					</tr>
					
						<tr>
							<td class="subheader">Name:</td>
							<td><span class="left">John Doe</span><span class="right"><%= link_to "View Profile", "#" %></span></td>
						</tr>
						<tr>
							<td class="subheader">Field of Expertise:</td>
							<td>Consulting</td>
						</tr>
						<tr>
							<td colspan="2">
								<input type="checkbox">Assign Freelancer
							</td>
						</tr>
					
					<tr>
						<td>
							<%= link_to "Message Freelancer", message_freelancer_path, class: 'button info tiny', 
								data: {"reveal-id" => "myModal", "reveal-ajax" => true} %>
						</td>
						<td>
							<%= link_to "Book Webinar appointment", book_webinar_appointment_path, class: 'button info tiny', 
								data: {"reveal-id" => "myModal", "reveal-ajax" => true} %>
						</td>
					</tr>
				</table>
	</div>
</div>

<div class="row">
	<div class="columns large-12">
		<h5>Assigned Tasks</h5>
		<table width="100%">
			<tr>
				<th>Assigned Freelancer</th>
				<th>Task</th>
				<th>Deadline</th>
				<th>&nbsp;</th>
			</tr>
			<tr>
				<td>John Doe</td>
				<td><input type="text_area"></td>
				<td><input type="textbox"></td>
				<td><button class="tiny">Assign Task</button></td>
			</tr>
		</table>
	</div>
</div>
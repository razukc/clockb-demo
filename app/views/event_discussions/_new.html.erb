<%= form_for @new_event_discussion, remote: true do |f| %>
	<%= f.text_field :commenter, placeholder: "Your full name", required: true, id: 'new_event_discussion_form' %>
	<%= f.text_area :comment, placeholder: "Start discussion here...", id: 'new_event_discussion_form', required: true %>
	<%= f.hidden_field :user_id, value: user_id %>
	<%= f.hidden_field :event_id, value: event_id %>
	<%= f.hidden_field :in_reply_to, value: 0 %>
	<%= f.submit "Post", class: "button tiny right", data: {disable_with: "Please wait..."} %>
<% end -%>


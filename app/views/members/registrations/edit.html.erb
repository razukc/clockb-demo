<% breadcrumb :member, @member %>
<div class="row">
  <div class="large-8 columns">
<dl class="tabs" data-tab>
  <dd class="active"><a href="#panel1">Profile</a></dd>
  <dd><a href="#panel3">Change Password</a></dd>
  <dd><a href="#panel4">Delete Account</a></dd>
</dl>
<div class="tabs-content">
  <div class="content active" id="panel1">
    <p>Please fill in the following information to complete your profile.</p>

<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, class: 'form-control' %>  
      <%= f.label :company%>
      <%= f.radio_button :company, true, class: 'form-control' %>
      <%= f.label :company, "Yes", :value => true %>
      <%= f.radio_button :company, false, class: 'form-control' %>
      <%= f.label :company, "No", :value => false %>

      <%= f.label :person_in_charge %>
      <%= f.text_field :person_in_charge, class: 'form-control' %>
      <%= f.label :contact_number %>
      <%= f.text_field :contact_number, class: 'form-control' %>
      <%= f.label :occupation %>
      <%= f.text_field :occupation, class: 'form-control' %>
      
      <%= f.label :package %>
      <%= f.radio_button :package, "basic", class: 'form-control' %>
      <%= f.label :package, "Basic", :value => "basic" %>
      <%= f.radio_button :package, "pro", class: 'form-control' %>
      <%= f.label :package, "Pro", :value => "pro" %>
      
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <fieldset>
          <p>You must enter your current password to make changes.</p>
          <div class="form-group">
            <%= f.label :current_password %>
            <%= f.password_field :current_password, class: 'form-control' %>
          </div>
      </fieldset>
    </div>
    <div class="clearfix">
      <%= f.submit 'Update', :class => 'button right' %>
    </div>
  <% end %>
</div>


  </div>

  <div class="content" id="panel3">
    <div class="authform">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => 'form'}) do |f| %>
        <%= devise_error_messages! %>
        <fieldset>
          <p>Leave these fields blank if you don't want to change your password.</p>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, :autocomplete => 'off', class: 'form-control' %>
          </div>
          <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </fieldset>
        <fieldset>
          <p>You must enter your current password to make changes.</p>
          <div class="form-group">
            <%= f.label :current_password %>
            <%= f.password_field :current_password, class: 'form-control' %>
          </div>
        </fieldset>
        <div class="clearfix">
          <%= f.submit 'Update', :class => 'button right' %>
        </div>
        <% end %>
    </div>
  </div>
  <div class="content" id="panel4">
    <p>Click the button below if you want to delete your account.</p>
    <div class="authform">
    <%= button_to "Delete my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button alert' %>
    </div>
    <div class="clearfix">
      <span class="warning label">WARNING</span>
      <p>Deleting an account is irreversible.</p>
    </div>
  </div>
</div>
  </div>
</div>

<div class="row">
  <div class="large-4 columns">

</div>
</div>

<div class="row">
  <div class="large-4 small-centered columns">
<div class="authform">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<h3 class="subheader">Sign up</h3>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= link_to 'Already a member?', new_session_path(resource_name), class: 'right'  %>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%- if @minimum_password_length %>
    <small style="font-size:70%;" class="right">(<%= @minimum_password_length %> characters minimum)</small>
    <% end -%>
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <%= f.submit 'Sign up', :class => 'button right' %>
<% end %>

</div>
</div>
</div>

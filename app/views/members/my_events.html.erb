<% breadcrumb :my_events, @my_events %>
<div class="row">
  <div class="large-8 columns">

<dl class="tabs" data-tab>
  <dd class="active"><a href="#panel1">My Events</a></dd>
  <dd><a href="#panel2">Today</a></dd>
</dl>
<div class="tabs-content">
  <div class="content active" id="panel1">
    <ul>
    <% @my_events.each do |event| %>
    <li><%= link_to event.name, event_path(event) %></li>
    <% end %>
    </ul>
    <% if @my_events.empty? %>
    <p>You have not signed up for any Events.</p>
    <p>Click <%= link_to 'here', events_path %> to browse all Events.</p>
    <% end %>
  </div>
  <div class="content" id="panel2">
    <% if @today.empty? %>
    <p>There are no events today.</p>
    <% end %>
    <ul>
    <% @today.each do |today| %>
    <li><%= link_to today.name, event_path(today) %></li>
    <% end %>
    </ul>
  </div>
</div>
  </div>
</div>